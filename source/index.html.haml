.play-overlay.js-player-overlay
  %span.close-btn.js-stop-track &times;
  .h-table
    .h-table-cell
      %h1.js-play-text Loading...

%main.container.is-intro
  
  %header.page-header
    .span-col-4.align-bottom
      %h1.main-title David Oversby-Powell
    .span-col-4.copy.align-bottom.hide-for-intro
      =mail_to "contact@davidoversbypowell.com"
    .span-col-4.copy.align-bottom.hide-for-intro
      +44 (0)7545 128 989

  %section.page-wrapper.hide-for-intro
    .span-col-4
      %p David Oversby-Powell is a Mixer and Producer based in London at The Premises Studios. Mentored by Mandy Parnell (Bjork, The XX), David has spent the last 9 years honing his skills.
      %p Recent work includes mixing of Kelly Lee Owens.
      %blockquote
        %p 
          "1 of 3 - Glowing magic-hour production"
          %br/
          â€”Pitchfork
      %p 
        If you would like to know more please contact me below.
      %p
        %a{:href => 'mailto:contact@davidoversbypowell.com'} contact@davidoversbypowell.com
        %br
        +44 (0) 7545 128989

    .span-col-8
      %ul.tracklist.display
        - data.content.tracks.each do |f|
          - if f.track
            %li.tracklist--item.can-play{:data => {'track' => f.track, 'track-title' => f.text, 'color_one' => f.color_one, 'color_two' => f.color_two}}
              %a{:href => f.track, :target => '_blank'}
                %span.year=f.year
                %span.track-title=f.text
                %span.credit=f.credit
                %span.fa.fa-play-circle.play-btn
          - else
            %li.tracklist--item
              %span.year=f.year
              %span.track-title=f.text
              %span.credit=f.credit


